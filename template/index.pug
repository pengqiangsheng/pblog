extends includes/layout.pug

block content
  .top
    .container
      h1#logo #{logo}
      div#move #{move}
  .header 介绍
  .doc
    .markdown-body !{markdown}

block styles
  style.
    #logo {
      font: 150px 'Italiana', sans-serif;
    }
    #move {
      margin-top: 12px;
      font-size: 16px;
    }
    .top {
      position: absolute;
      height: 100%;
      width:100%;
    }
    .container {
      position: absolute;
      top: 50%;
      margin-top: -168px;
      text-align: center;
      width: 100%;
    }
    .header {
      position: absolute;
      top: 100%;
      left: 0;
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 2rem;
      background: rgb(244, 244, 245);
    }
    .doc {
      position: absolute;
      top: 200%;
      left: 0;
      width: 100%;
      min-height: 100%;
    }
    .markdown-body {
      box-sizing: border-box;
      min-width: 200px;
      max-width: 980px;
      margin: 0 auto;
      padding: 45px;
    }

    
